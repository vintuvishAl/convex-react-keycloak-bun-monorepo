{
	"compilerOptions": {
	  "target": "ES2020",
	  "module": "ESNext",
	  "moduleResolution": "bundler",
	  "esModuleInterop": true,
	  "strict": true,
	  "jsx": "preserve",
	  "resolveJsonModule": true,
	  "isolatedModules": true,
	  "noEmit": true,
	  "skipLibCheck": true
	},
	  "include": [
		"./**/*"
	  ]
  }